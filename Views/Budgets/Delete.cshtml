
@model BudgetExpenceProject.Models.Budget

<h2>Delete Budget</h2>

<p>Are you sure you want to delete this budget?</p>

<table class="table table-bordered">
    <tr>
        <th>Budget Amount</th>
        <td>@Model.BudgetAmount</td>
    </tr>

    <tr>
        <th>Start Date</th>
        <td>@(Model.StartDate.HasValue ? Model.StartDate.Value.ToShortDateString() : "N/A")</td>
    </tr>

    <tr>
        <th>End Date</th>
        <td>@(Model.EndDate.HasValue ? Model.EndDate.Value.ToShortDateString() : "N/A")</td>
    </tr>

    <tr>
        <th>Create Date</th>
        <td>@(Model.CreateDate.HasValue ? Model.CreateDate.Value.ToString("dd/MM/yyyy hh:mm tt") : "N/A")</td>
    </tr>

    <tr>
        <th>User</th>
        <td>@Model.Login.FullName</td>
    </tr>
</table>

@using (Html.BeginForm("Delete", "Budgets", FormMethod.Post))
{
    @Html.HiddenFor(m => m.BudgetId)

    <button class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary", style = "margin-left:10px;" })
}
