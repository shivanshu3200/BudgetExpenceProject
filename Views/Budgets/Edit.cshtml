
@model BudgetExpenceProject.Models.Budget

<h2>Edit Budget</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.BudgetId)

    <div class="form-group">
        <label>Budget Amount</label>
        @Html.TextBoxFor(m => m.BudgetAmount, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        <label>Start Date</label>
        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        <label>End Date</label>
        @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        <label>Create Date</label>
        @Html.TextBoxFor(m => m.CreateDate, new { @class = "form-control", type = "datetime" })
    </div>

    <button class="btn btn-success mt-3 w-100">Save</button>
}

<p>@Html.ActionLink("Back to List", "Index")</p>
