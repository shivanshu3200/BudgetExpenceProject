
@model IEnumerable<BudgetExpenceProject.Models.Expense>

<h2>Expenses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>Amount</th>
        <th>Date</th>
        <th>Payment Method</th>
        <th>Note</th>
        <th>User</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Amount</td>
            <td>@item.Date</td>
            <td>@item.PaymentMethod</td>
            <td>@item.Note</td>
            <td>@item.Login.FullName</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ExpenseId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ExpenseId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ExpenseId })
            </td>
        </tr>
    }
</table>
